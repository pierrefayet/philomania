{% extends '../base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}
    <main class="bg-white flex items-center justify-center">
        <div class="bg-white px-6 py-24 sm:py-32 lg:px-8 shadow-lg rounded-lg max-w-lg w-full mx-4">
            <div class="text-center">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Création du commentaire</h2>
                <p class="mt-2 text-lg leading-8 text-gray-600">Veuillez remplir le formulaire pour poster votre commentaire.</p>
            </div>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger text-red-600 mt-4" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <form method="post" class="mx-auto mt-16 max-w-xl sm:mt-20">
                {{ form_start(commentaryForm) }}
                <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
                    <div class="sm:col-span-2">
                        {{ form_label(commentaryForm.title) }}
                        {{ form_widget(commentaryForm.title) }}
                    </div>
                    <div class="sm:col-span-2">
                        {{ form_label(commentaryForm.content) }}
                        {{ form_widget(commentaryForm.content) }}
                    </div>
                    <div class="sm:col-span-2">
                        {{ form_label(commentaryForm.isActive) }}
                        {{ form_widget(commentaryForm.isActive) }}
                    </div>
                </div>
                <div class="mt-10">
                    <button type="submit" class="block w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Poster un commentaire</button>
                </div>
                {{ form_end(commentaryForm) }}
            </form>
        </div>
    </main>
{% endblock %}