{% extends 'base.html.twig' %}

{% block title %}Détails du Thème{% endblock %}

{% block body %}
    <main class="flex justify-center bg-white shadow-lg min-h-screen">
        <div class="container mt-4 flex flex-col justify-center items-center">

            <h1 class="font-merriweather-sans text-center text-4xl font-bold text-blue-700 mb-4">DÉTAILS DU THÈME</h1>

            <!-- Détails du Thème -->
            <div class="p-8 rounded-lg shadow-lg bg-blue-50 mt-4 w-full">
                <h3 class="font-merriweather-sans text-center text-2xl font-bold text-blue-700 mb-4">
                    {{ theme.title }}
                </h3>

                <div class="mx-auto">
                    <p class="font-montserrat text-gray-700 leading-relaxed text-sm md:text-base mt-4">
                        {{ theme.content }}
                    </p>
                </div>
            </div>

            <!-- Section Commentaires -->
            <div class="p-8 rounded-lg shadow-lg bg-blue-50 mt-4 w-full max-w-2xl">
                <h3 class="text-2xl font-bold text-blue-700 mb-4">Commentaires</h3>

                {% for commentary in commentaries %}
                    <div class="border-b py-2 mt-4">
                        <p class="text-gray-800 font-bold">{{ commentary.user.email }}</p>
                        <p class="text-gray-600 mt-4">{{ commentary.content }}</p>
                        <small class="text-gray-500">{{ commentary.createdAt|date('d/m/Y H:i') }}</small>
                    </div>
                {% else %}
                    <p class="text-gray-600">Aucun commentaire pour l'instant.</p>
                {% endfor %}
            </div>

            <!-- Actions -->
            <div class="p-8 rounded-lg shadow-lg bg-blue-50 mt-6 w-full max-w-lg">
                <h3 class="font-merriweather-sans text-center text-xl font-semibold text-blue-700 mb-4">
                    ACTIONS
                </h3>
                <div class="flex justify-center space-x-4">
                    <a href="{{ path('app_theme_update', {id: theme.id}) }}"
                       class="inline-flex px-4 py-2 rounded-md bg-indigo-600 text-white text-center hover:bg-indigo-500">
                        Modifier
                    </a>
                    <form action="{{ path('app_theme_delete', {id: theme.id}) }}" method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ theme.id) }}">
                        <button type="submit" class="px-4 py-2 rounded-md bg-red-600 text-white hover:bg-red-500">
                            Supprimer
                        </button>
                    </form>
                </div>
            </div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} {{ label == 'success' ? 'bg-green-500 text-white' : (label == 'warning' ? 'bg-yellow-400 text-black' : (label == 'error' ? 'bg-red-500 text-white' : '')) }} p-4 rounded-md mb-4">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </main>
{% endblock %}