{% extends 'base.html.twig' %}

{% block title %}Liste des Thèmes{% endblock %}

{% block body %}
    <main class="flex justify-center bg-white shadow-lg h-[800px]">
        <div class="container mt-4 flex flex-col items-center">

            <!-- Titre Principal -->
            <div class="p-8 rounded-lg shadow-lg bg-blue-50 mt-4 w-full max-w-4xl">
                <h3 class="font-merriweather-sans text-center text-2xl font-bold text-blue-700 mb-4">
                    LISTE DES THÈMES
                </h3>

                <!-- Liste des Thèmes -->
                {% if themes is not empty %}
                    <ul class="space-y-4">
                        {% for theme in themes %}
                            <li class="p-4 rounded-md shadow-md bg-white hover:bg-gray-100">
                                <a href="{{ path('theme_detail', {id: theme.id}) }}"
                                   class="font-montserrat text-lg text-indigo-600 hover:underline">
                                    {{ theme.title }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="font-montserrat text-gray-700 text-center">Aucun thème disponible.</p>
                {% endif %}
            </div>

        </div>
    </main>
{% endblock %}
