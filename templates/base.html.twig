<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Philomanie{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/assets_styles_app_css.css') }}">
        <link rel="icon" href="{{ asset('build/images/favicon.webp') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
              rel="stylesheet">
    {% endblock %}
</head>
<body class="bg-gradient-to-r from-blue-400 via-blue-500 to-indigo-600 ">
<header class="bg-opa city-20">
    <div class="flex justify-between m-8">
        <div class="text-center">
            <h1 class="font-merriweather-sans text-4xl font-bold text-white">Philomanie</h1>
        </div>
        {% if app.user %}
            <span class="font-merriweather-sans text-gray-200">Bienvenue, {{ app.user.email }}</span>
        {% endif %}
        <nav>
            <div class="flex flex-col space-y-4 font-medium text-xl text-white" id="navbar">
                <div class="flex justify-center space-x-6">
                    <a href="{{ path('homepage') }}" class="font-merriweather-sans hover:text-gray-300">Accueil</a>
                    <a href="{{ path('about') }}" class="font-merriweather-sans hover:text-gray-300">Qui suis-je ?</a>
                    <a href="{{ path('contact') }}" class="font-merriweather-sans hover:text-gray-300">Contact</a>
                </div>
                <div class="flex justify-center space-x-6">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('daily-theme') }}" class="font-merriweather-sans hover:text-gray-300">Theme</a>
                        <a href="{{ path('theme_create') }}" class="font-merriweather-sans hover:text-gray-300">Form-Theme</a>
                        <a href="{{ path('app_synthesis_create') }}" class="font-merriweather-sans hover:text-gray-300">Form-Synthese</a>
                    {% endif %}
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}"
                           class="font-merriweather-sans hover:text-gray-300">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}"
                           class="font-merriweather-sans hover:text-gray-300">Connexion</a>
                        <a href="{{ path('app_register') }}" class="font-merriweather-sans hover:text-gray-300">Créer un
                            compte</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </div>
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}
</header>
<section>
    <img src="{{ asset('build/images/banner.webp') }}" alt="banniere" class="h-[290px] object-cover w-full">
</section>

{% block body %}
{% endblock %}

<footer id="footer" class="flex justify-center items-center space-x-4 h-[100px]">
    <p class="font-montserrat font-medium text-white">&copy; Copyright 2024</p>
    <a href="https://example.com/" class="font-montserrat font-medium text-white hover:text-gray-300">Pierre Fayet</a>
</footer>

{% block javascripts %}{% endblock %}
</body>
</html>

